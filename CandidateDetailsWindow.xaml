<Window x:Class="InterviewAssessmentSystem.Views.CandidateDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="{Binding WindowTitle}" 
        Height="520" Width="850"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">

    <Grid Margin="20">
        <!-- Added margin for overall spacing -->

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Row 0 -->
            <RowDefinition Height="Auto"/>
            <!-- Row 1 -->
            <RowDefinition Height="Auto"/>
            <!-- Row 2 -->
            <RowDefinition Height="Auto"/>
            <!-- Row 3 -->
            <RowDefinition Height="Auto"/>
            <!-- Row 4 -->
            <RowDefinition Height="Auto"/>
            <!-- Row 5 -->
            <RowDefinition Height="Auto"/>
            <!-- Buttons -->
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="140"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="40"/>
            <ColumnDefinition Width="140"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>


        <!-- FIRST NAME -->
        <Label Content="First Name:" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center"/>
        <TextBox Grid.Row="0" Grid.Column="1" Margin="0 5"
                 Padding="5"
                 Text="{Binding Candidate.FirstName, UpdateSourceTrigger=PropertyChanged}"/>

        <!-- LAST NAME -->
        <Label Content="Last Name:" Grid.Row="0" Grid.Column="3" VerticalAlignment="Center"/>
        <TextBox Grid.Row="0" Grid.Column="4" Margin="0 5"
                 Padding="5"
                 Text="{Binding Candidate.LastName, UpdateSourceTrigger=PropertyChanged}"/>


        <!-- PHONE -->
        <Label Content="Phone Number:" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center"/>
        <TextBox Grid.Row="1" Grid.Column="1" Margin="0 5"
                 Padding="5"
                 Text="{Binding Candidate.PhoneNumber, UpdateSourceTrigger=PropertyChanged}"/>

        <!-- EMAIL -->
        <Label Content="Email:" Grid.Row="1" Grid.Column="3" VerticalAlignment="Center"/>
        <TextBox Grid.Row="1" Grid.Column="4" Margin="0 5"
                 Padding="5"
                 Text="{Binding Candidate.Email, UpdateSourceTrigger=PropertyChanged}"/>


        <!-- INTERVIEW DATE -->
        <Label Content="Interview Date:" Grid.Row="2" Grid.Column="0" VerticalAlignment="Center"/>
        <DatePicker Grid.Row="2" Grid.Column="1" Margin="0 5"
                    SelectedDate="{Binding Candidate.InterviewDate}"/>

        <!-- STATUS -->
        <Label Content="Status:" Grid.Row="2" Grid.Column="3" VerticalAlignment="Center"/>
        <StackPanel Grid.Row="2" Grid.Column="4"
                    Margin="0 5"
                    Orientation="Horizontal" VerticalAlignment="Center">
            <RadioButton Content="Selected"
                         Margin="0 0 20 0"
                         GroupName="Status"
                         IsChecked="{Binding IsSelected}"
                         Padding="5"/>
            <RadioButton Content="Rejected"
                         GroupName="Status"
                         IsChecked="{Binding IsRejected}"
                         Padding="5"/>
        </StackPanel>


        <!-- SKILL 1 -->
        <Label Content="Skill 1:" Grid.Row="3" Grid.Column="0" VerticalAlignment="Center"/>
        <ComboBox Grid.Row="3" Grid.Column="1"
                  Margin="0 5"
                  Padding="5"
                  ItemsSource="{Binding AvailableSkills}"
                  SelectedItem="{Binding Candidate.Skill1}"/>

        <!-- SKILL 2 -->
        <Label Content="Skill 2:" Grid.Row="3" Grid.Column="3" VerticalAlignment="Center"/>
        <ComboBox Grid.Row="3" Grid.Column="4"
                  Margin="0 5"
                  Padding="5"
                  ItemsSource="{Binding AvailableSkills}"
                  SelectedItem="{Binding Candidate.Skill2}"/>


        <!-- COMMENTS -->
        <Label Content="Comments:" Grid.Row="4" Grid.Column="0" VerticalAlignment="Top" />

        <TextBox Grid.Row="4" Grid.Column="1" Grid.ColumnSpan="4"
                 Margin="0 10"
                 Padding="10"
                 Height="120"
                 TextWrapping="Wrap"
                 AcceptsReturn="True"
                 VerticalScrollBarVisibility="Auto"
                 Text="{Binding Candidate.Comments, UpdateSourceTrigger=PropertyChanged}"/>


        <!-- BUTTONS -->
        <StackPanel Grid.Row="6" Grid.Column="0" Grid.ColumnSpan="5"
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right"
                    Margin="0 20 0 0">

            <Button Content="Cancel"
                    Command="{Binding CancelCommand}"
                    CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"
                    MinWidth="100"
                    Margin="0 0 10 0"
                    Padding="10,5"/>

            <Button Content="Submit"
                    Command="{Binding SubmitCommand}"
                    CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"
                    MinWidth="100"
                    Padding="10,5"/>
        </StackPanel>

    </Grid>
</Window>
